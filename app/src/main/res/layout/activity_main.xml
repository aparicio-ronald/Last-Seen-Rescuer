<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/get_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:text="GET LOG DATA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_information" />

    <ListView
        android:id="@+id/bluetooth_checkpoint_data_list_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/get_data_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/profile_information_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="136dp"
            android:text="PLACEHOLDER FOR PROFILE INFORMATION"
            android:textSize="25sp" />
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>